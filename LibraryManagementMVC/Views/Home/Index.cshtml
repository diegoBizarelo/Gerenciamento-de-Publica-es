
@{ ViewData["Title"] = "Index"; }

<h1>Index</h1>

@{ if (Model != null)
                {
    <div class="alert alert-danger">@Model</div> } }
<form method="post">
    <table class="w-25 table table-striped table-bordered">
        <tbody>
            <tr>
                <td>Username</td>
                <td><input type="text" name="User" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="text" name="Password" /></td>
            </tr>
            <tr>
                <td colspan="2">
                    <button>Submit</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>
